// This is base configuration for build, jest and webpack
{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",

    "isolatedModules": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "skipLibCheck": true,

    // to support existing iterators Array(...).keys() for target=es5
    "downlevelIteration": true,

    // allowing this because there is a lot of such cases already
    // normally - don't use it!
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__server_tests__/**",
    "**/__fixtures__/**"
  ]
}
