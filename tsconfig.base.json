{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@aristobyte-ui/anchor": ["packages/anchor/src/main"],
      "@aristobyte-ui/button": ["packages/button/src/main"],
      "@aristobyte-ui/card": ["packages/card/src/main"],
      "@aristobyte-ui/cli": ["packages/cli/src/main"],
      "@aristobyte-ui/dropdown": ["packages/dropdown/src/main"],
      "@aristobyte-ui/eslint-config": ["packages/eslint-config/src/main"],
      "@aristobyte-ui/jest-config": ["packages/jest-config/src/main"],
      "@aristobyte-ui/label": ["packages/label/src/main"],
      "@aristobyte-ui/message-box": ["packages/message-box/src/main"],
      "@aristobyte-ui/presets": ["packages/presets/src/main"],
      "@aristobyte-ui/radio": ["packages/radio/src/main"],
      "@aristobyte-ui/react": ["packages/react/src/main"],
      "@aristobyte-ui/spinner": ["packages/spinner/src/main"],
      "@aristobyte-ui/switch": ["packages/switch/src/main"],
      "@aristobyte-ui/typescript-config": ["packages/typescript-config/src/main"],
      "@aristobyte-ui/utils": ["packages/utils/src/main"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__server_tests__/**",
    "**/__fixtures__/**"
  ]
}
