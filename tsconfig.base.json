{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./"
    // "paths": {
    //   "@aristobyte-ui/*": ["packages/*/src/main"]
    // }
  },
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__server_tests__/**",
    "**/__fixtures__/**"
  ]
}
