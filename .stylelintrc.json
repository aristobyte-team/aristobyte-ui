{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "color-named": null,
    "max-nesting-depth": null,
    "length-zero-no-unit": null,
    "rule-empty-line-before": null,
    "color-function-notation": null,
    "color-function-alias-notation": null,
    "alpha-value-notation": null,
    "no-duplicate-selectors": null,
    "property-no-vendor-prefix": null,
    "media-feature-range-notation": null,
    "no-descending-specificity": null,
    "selector-no-qualifying-type": [true, { "ignore": ["class", "attribute"] }],
    "scss/dollar-variable-colon-space-after": null,
    "selector-class-pattern": ["^[a-z0-9_\\-]+$", { "resolveNestedSelectors": true }],
    "selector-no-vendor-prefix": [true, { "ignoreSelectors": [":-ms-fullscreen"] }]
  },
  "overrides": [
    {
      "files": ["packages/presets/**/*.scss"],
      "rules": {
        "block-no-empty": null
      }
    }
  ]
}
