{
  "name": "@aristobyte-ui/utils",
  "description": "A collection of shared utility functions for AristoByte projects, designed to provide reusable helpers, streamline common operations, and ensure consistency across applications and packages.",
  "version": "1.0.36",
  "license": "MIT",
  "private": false,
  "author": "AristoByte <info@aristobyte.com>",
  "homepage": "https://www.npmjs.com/package/@aristobyte-ui/utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte-team/aristobyte-ui.git",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "keywords": [
    "utils",
    "utilities",
    "helpers",
    "typescript",
    "javascript",
    "shared",
    "common",
    "core",
    "functions",
    "aristobyte"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles/settings": {
      "import": "./dist/styles/_settings.scss",
      "require": "./dist/styles/_settings.scss"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "esbuild-sass-plugin": "^3.3.1",
    "framer-motion": "^12.23.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.0",
    "shiki": "^3.7.0",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@aristobyte-ui/eslint-config": "^1.0.36",
    "@aristobyte-ui/typescript-config": "^1.0.36",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "postcss": "^8.5.3",
    "sass-embedded": "^1.91.0",
    "tailwindcss": "^4.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
