{
  "name": "@aristobyte-ui/jest-config",
  "description": "Centralized, shareable Jest configuration presets for AristoByteUI monorepo projects. Supports Node, React, and Next.js environments with TypeScript, Babel integration, and consistent coverage reporting.",
  "version": "2.16.1",
  "private": false,
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "author": "AristoByte <info@aristobyte.com>",
  "homepage": "https://www.npmjs.com/package/@aristobyte-ui/jest-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte-team/aristobyte-ui.git",
    "directory": "packages/jest-config"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "keywords": [
    "jest",
    "jest-config",
    "testing",
    "typescript",
    "react",
    "nextjs",
    "monorepo",
    "babel",
    "testing-library",
    "coverage",
    "unit-tests",
    "integration-tests",
    "aristobyte",
    "aristobyte-ui",
    "shared-config",
    "workspace"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./base": {
      "types": "./es/jest.base.d.ts",
      "import": "./es/jest.base.js",
      "require": "./lib/jest.base.js"
    },
    "./react": {
      "types": "./es/jest.react.d.ts",
      "import": "./es/jest.react.js",
      "require": "./lib/jest.react.js"
    },
    "./next": {
      "types": "./es/jest.next.d.ts",
      "import": "./es/jest.next.js",
      "require": "./lib/jest.next.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "es",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "babel-jest": "^30.2.0",
    "jest": "^29.0.0"
  },
  "devDependencies": {
    "@jest/types": "^30.0.5",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/jest": "^29.5.14",
    "identity-obj-proxy": "^3.0.0",
    "typescript": "^5.8.2"
  }
}
