{
  "name": "@aristobyte-ui/theme",
  "description": "AristoByte Tailwind CSS theme plugin providing a flexible, extensible design system for rapid UI development and consistent styling across applications.",
  "version": "1.0.74",
  "license": "MIT",
  "private": false,
  "author": "AristoByte <info@aristobyte.com>",
  "homepage": "https://www.npmjs.com/package/@aristobyte-ui/theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte-team/aristobyte-ui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-theme",
    "ui-theme",
    "design-system",
    "aristobyteui",
    "frontend",
    "web-development",
    "react",
    "css-framework"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "generate:variants": "ts-node -P tsconfig.scripts.json scripts/generateVariants.ts",
    "remove:variants": "rm -rf plugins/*.generated.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@aristobyte-ui/eslint-config": "^1.0.74",
    "@aristobyte-ui/typescript-config": "^1.0.74",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^24.3.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.27.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
