{
  "name": "@aristobyte-ui/theme",
  "description": "AristoByte Tailwind CSS theme plugin providing a flexible, extensible design system for rapid UI development and consistent styling across applications.",
  "version": "1.0.102",
  "license": "MIT",
  "private": false,
  "author": "AristoByte <info@aristobyte.com>",
  "homepage": "https://www.npmjs.com/package/@aristobyte-ui/theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte-team/aristobyte-ui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-theme",
    "ui-theme",
    "design-system",
    "aristobyteui",
    "frontend",
    "web-development",
    "react",
    "css-framework"
  ],
  "files": [
    "plugins",
    "extend",
    "index.mjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.mjs",
      "types": "./dist/plugins/index.d.ts"
    },
    "./extend": {
      "import": "./dist/extend/index.mjs",
      "types": "./dist/extend/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.0"
  },
  "dependencies": {
    "@aristobyte-ui/eslint-config": "^1.0.102",
    "eslint": "^9.27.0"
  }
}
