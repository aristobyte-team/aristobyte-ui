{
  "name": "@aristobyte-ui/theme",
  "version": "2.4.22",
  "description": "The default theme for AristoByteUI components",
  "keywords": [
    "theme",
    "theming",
    "design",
    "ui",
    "components",
    "classNames",
    "css"
  ],
  "homepage": "https://www.npmjs.com/package/@aristobyte-ui/theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte-team/aristobyte-ui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "config.js",
    "config.d.ts",
    "plugin.js",
    "plugin.d.ts",
    "colors.js",
    "colors.d.ts"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs",
      "require": "./dist/plugin.js"
    },
    "./colors": {
      "types": "./dist/colors.d.ts",
      "import": "./dist/colors.mjs",
      "require": "./dist/colors.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@aristobyte-ui/utils": "^1.0.53",
    "clsx": "^1.2.1",
    "color": "^4.2.3",
    "color2k": "^2.0.3",
    "deepmerge": "4.3.1",
    "flat": "^5.0.2",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "3.1.1"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/flat": "^5.0.2",
    "clean-package": "2.2.0",
    "tailwindcss": "4.1.11"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
