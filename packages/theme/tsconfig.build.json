{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "removeComments": true
  },
  "include": ["index.ts", "plugins/**/*", "extend/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
