{
  "version": "1.0.6",
  "name": "aristobyte-ui",
  "author": "AristoByte",
  "description": "A modern, modular design system and component architecture for internal and public-facing AristoByte applications.",
  "license": "MIT",
  "private": true,
  "keywords": [
    "design-system",
    "component-library",
    "monorepo",
    "react",
    "typescript",
    "aristobyte",
    "ui"
  ],
  "homepage": "https://github.com/aristobyte-team/aristobyte-ui.git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/AristoByte/aristobyte-ui.git"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "yarn lint && yarn check-types && yarn format",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "add-package": "sh ./scripts/add-package.sh",
    "bump:patch": "sh ./scripts/bump.sh patch",
    "bump:feat": "sh ./scripts/bump.sh feat",
    "bump:fix": "sh ./scripts/bump.sh fix",
    "clear": "sh ./scripts/clear.sh",
    "publish-package": "sh ./scripts/publish-package.sh",
    "publish-all": "sh ./scripts/publish-all.sh",
    "auth": "sh ./scripts/auth.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
