{
  "name": "aristobyte-ui",
  "author": "AristoByte",
  "license": "MIT",
  "description": "A comprehensive, modular React component library by AristoByte providing fully-typed, performance-first UI components including buttons, anchors, dropdowns, radio buttons, switches, spinners, and message boxes. Built for scalability, composability, and seamless integration with design tokens and SCSS modules.",
  "keywords": [
    "aristobyte",
    "aristobyte-ui",
    "react",
    "typescript",
    "ui-library",
    "component-library",
    "modular",
    "scalable",
    "composable",
    "button",
    "button-group",
    "anchor",
    "dropdown",
    "radio",
    "switch",
    "spinner",
    "message-box",
    "design-tokens",
    "scss",
    "typescript-first",
    "ripple",
    "interactive",
    "performance",
    "monorepo",
    "esm",
    "cjs"
  ],
  "homepage": "https://ui.aristobyte.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/AristoByte/aristobyte-ui.git"
  },
  "bugs": {
    "url": "https://github.com/aristobyte-team/aristobyte-ui.git/issues"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2",
    "yarn": ">=1.22.22"
  },
  "private": true,
  "scripts": {
    "build": "bash scripts/build.sh",
    "check-version": "bash scripts/check-version.sh",
    "clean": "rm -rf packages/*/dist dist-test/",
    "compile": "tsc -b tsconfig.build.json",
    "create-package": "bash scripts/create-package.sh",
    "dev:docs": "bash scripts/dev.sh docs",
    "dev:cli": "bash scripts/dev.sh cli",
    "dev:sandbox": "bash scripts/dev.sh sandbox",
    "format": "prettier --write '**/*.{json,md,yaml,yml,html,scss}' && yarn lint:es --fix",
    "generate-build-tsconfig": "node scripts/generate-build-tsconfig.js",
    "install:quiet": "yarn install 2>&1 | node scripts/filter-logs.js",
    "jest": "jest --colors",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache",
    "lint:style": "stylelint '**/*.scss'",
    "lint-staged": "lint-staged",
    "release": "bash ./scripts/publish.sh",
    "test": "yarn jest -c ./config/jest/jest.config.js",
    "test:ci": "bash scripts/test.sh",
    "test:coverage": "yarn test --coverage --runInBand --coverageProvider=v8",
    "test:project:comp": "yarn jest --projects ./config/jest/jest.client-comp.project.js",
    "test:project:server": "yarn jest --projects ./config/jest/jest.server.project.js",
    "test:project:unit": "yarn jest --projects ./config/jest/jest.client-unit.project.js",
    "test:watch": "yarn test --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/register": "^7.28.6",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "copy-webpack-plugin": "^13.0.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-test-renderer": "^19.2.3",
    "sass": "^1.97.2",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "stylelint": "^16.18.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^5.1.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "webpack-merge": "^6.0.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "lint-staged": "^16.1.0",
    "stylelint-config-standard-scss": "^15.0.0",
    "tslib": "^2.8.1",
    "turbo": "^2.8.3"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "apps/**/*.{js,ts,tsx}": [
      "eslint --fix --ignore-pattern '**/.next/**'"
    ],
    "*.{json,md,yaml,yml,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  },
  "dependencies": {
    "framer-motion": "^12.27.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
